assert(!is_android, "Page actions are for desktop platforms only")

source_set("zoom_page_action") {
  public = [ "zoom_page_action_controller.h" ]

  sources = [ "zoom_page_action_controller.cc" ]

  public_deps = [
    "//base",
    "//chrome/browser:browser_public_dependencies",
    "//chrome/browser:primitives",
    "//chrome/browser/ui:ui_features",
    "//chrome/browser/ui/views/page_action",
    "//components/zoom",
