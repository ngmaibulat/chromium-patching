    "//components/prefs",
    "//ios/chrome/browser/shared/model/prefs:pref_names",
  ]
}

source_set("prefs") {
  sources = [
    "parcel_tracking_prefs.h",
    "parcel_tracking_prefs.mm",
  ]
  deps = [
    "//base",
    "//components/prefs",
    "//ios/chrome/browser/shared/model/prefs:pref_names",
    "//ios/chrome/browser/shared/public/features",
  ]
}
